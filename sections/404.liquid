{% comment %}
  This section is used in the 404 template to render page shown when customers
  enter an invalid store URL.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/404
{% endcomment %}

<div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
  <h1 class="text-6xl md:text-8xl font-bold text-neutral-200 mb-4">404</h1>
  <h2 class="text-2xl md:text-3xl font-semibold mb-4">{{ '404.title' | t }}</h2>

  <p class="text-neutral-600 mb-8 max-w-md">
    {{ '404.not_found' | t }}
  </p>

  <a
    href="{{ routes.all_products_collection_url }}"
    class="inline-flex px-6 py-3 bg-neutral-900 text-white rounded-lg hover:bg-neutral-800 transition-colors"
  >
    {{ '404.back_to_shopping' | t }}
  </a>
</div>

{% schema %}
{
  "name": "t:general.404",
  "settings": []
}
{% endschema %}
