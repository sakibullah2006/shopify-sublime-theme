{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="py-8 px-4 md:px-8">
  <h1 class="text-3xl font-bold mb-8">{{ collection.title }}</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% paginate collection.products by 20 %}
      {% for product in collection.products %}
        <div class="group">
          {% if product.featured_image %}
            <a href="{{ product.url }}" class="block overflow-hidden rounded-lg mb-3">
              {{
                product.featured_image
                | image_url: width: 400, height: 400, crop: 'center'
                | image_tag: class: 'w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105'
              }}
            </a>
          {% endif %}
          <div class="space-y-1">
            <p class="font-medium">
              <a href="{{ product.url }}" class="hover:underline">{{ product.title | escape }}</a>
            </p>
            <p class="text-neutral-600">{{ product.price | money }}</p>
          </div>
        </div>
      {% endfor %}

      <div class="col-span-full flex justify-center gap-2 mt-8">
        {{ paginate | default_pagination }}
      </div>
    {% endpaginate %}
  </div>
</div>

{% schema %}
{
  "name": "t:general.collection",
  "settings": []
}
{% endschema %}
