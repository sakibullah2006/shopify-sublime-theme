{% comment %}
  This section is used in the list-collections template to render a list of
  collections.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="py-8 px-4 md:px-8">
  <h1 class="text-3xl font-bold mb-8">{{ 'collections.title' | t }}</h1>

  {% liquid
    if section.settings.grid_item_width == 'collections--compact'
      assign grid_classes = 'grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6'
    else
      assign grid_classes = 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4'
    endif
  %}

  <div
    class="{{ grid_classes }}"
    style="gap: {{ section.settings.grid_gap }}px"
  >
    {% for collection in collections %}
      <a class="group flex flex-col" href="{{ collection.url }}">
        {% if collection.featured_image %}
          <div class="overflow-hidden rounded-lg mb-3">
            {{
              collection.featured_image
              | image_url: width: 600, height: 600, crop: 'center'
              | image_tag: class: 'w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105'
            }}
          </div>
        {% endif %}

        <div class="space-y-1">
          <p class="font-medium group-hover:underline">{{ collection.title }}</p>

          {% if collection.description %}
            <p class="text-sm text-neutral-600">{{ collection.description | strip_html | truncatewords: 15 }}</p>
          {% endif %}
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "t:general.collections_grid",
  "settings": [
    {
      "type": "select",
      "id": "grid_item_width",
      "label": "t:labels.grid_item_width",
      "options": [
        { "value": "collections--compact", "label": "t:options.size.small" },
        { "value": "collections--full", "label": "t:options.size.large" }
      ],
      "default": "collections--full"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "t:labels.grid_gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 10
    }
  ],
  "presets": [{ "name": "t:general.collections_grid" }]
}
{% endschema %}
