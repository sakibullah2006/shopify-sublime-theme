<footer class="bg-gray-50 border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8 py-12 md:py-16">
    {%- # Main Footer Content -%}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 mb-12">
      {%- # Brand Section -%}
      <div class="flex flex-col gap-4">
        <a
          href="{{ routes.root_url }}"
          class="text-lg font-semibold text-gray-900 hover:text-gray-600 transition-colors duration-200 w-fit"
        >
          {{ shop.name }}
        </a>
        <p class="text-sm text-gray-600 leading-relaxed">
          {{ shop.description | default: 'Your premium destination for quality products and exceptional service.' }}
        </p>
      </div>

      {%- # Navigation Links -%}
      {%- if section.settings.menu.links.size > 0 -%}
        <div class="flex flex-col gap-4">
          <h3 class="text-sm font-semibold text-gray-900">Quick Links</h3>
          <nav class="flex flex-col gap-3">
            {%- for link in section.settings.menu.links -%}
              <a
                href="{{ link.url }}"
                class="text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200 w-fit"
              >
                {{ link.title }}
              </a>
            {%- endfor -%}
          </nav>
        </div>
      {%- endif -%}

      {%- # Contact Section -%}
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-semibold text-gray-900">Customer Care</h3>
        <div class="flex flex-col gap-2 text-sm text-gray-600">
          <p>Need help? We're here for you.</p>
          <a href="mailto:support@example.com" class="hover:text-gray-900 transition-colors duration-200 w-fit">
            support@example.com
          </a>
        </div>
      </div>
    </div>

    {%- # Payment Icons Section -%}
    {%- if section.settings.show_payment_icons and shop.enabled_payment_types.size > 0 -%}
      <div class="border-t border-gray-200 pt-8 mb-8">
        <h3 class="text-sm font-semibold text-gray-900 mb-4">Payment Methods</h3>
        <div class="flex flex-wrap gap-4 items-center">
          {%- for type in shop.enabled_payment_types -%}
            <div class="h-8 opacity-70 hover:opacity-100 transition-opacity duration-200">
              {{ type | payment_type_svg_tag: style: 'max-height: 100%' }}
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- # Footer Bottom -%}
    <div class="border-t border-gray-200 pt-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4 text-xs text-gray-600">
      <div>
        &copy; {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All rights reserved.
      </div>
      <div>
        {{ powered_by_link }}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
